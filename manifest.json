{
    "manifest_version": 3,
    "name": "Eye & Posture Reminder",
    "version": "1.0",
    "description": "Reminds you to take breaks for eye and posture care",
    "permissions": ["alarms", "storage", "notifications"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "clock.png",
            "48": "clock.png",
            "128": "clock.png"
        }
    }
}
